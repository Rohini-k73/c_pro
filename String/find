//strchr(): Finds the first occurrence of a character in a string.

#include <stdio.h>
#include <string.h>

void main() {
    char str[] = "Hello, world!";
    char ch = 'o';
    char *result = strchr(str, ch);
    
    if (result)
        printf("Character found at position: %ld\n", result - str);
    else
        printf("Character not found.\n");
    
}
