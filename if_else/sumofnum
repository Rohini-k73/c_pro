#include<stdio.h>

void main()
 {
	int num, firstd, sum=0;
	
	printf("Enter your number :");
	scanf("%d", &num);
	
	int lastd = num % 10;
	
	while(num)
	{
		firstd = num % 10;
		num = num / 10;
	}
	sum = lastd + firstd;
	
	printf("Sum of first and last digits of given number is %d", sum);
}
