#include<stdio.h>
//sum and rev of three digit num
void main()
{
	int num;
	
//	printf("Enter a three digit number : "); 
//	scanf("%d",&num);
	int num = 234;
	int q1 = num % 10; 
	int r1 = num / 10; 
	int q2 = r1 % 10; 
	int r2 = r1 /10; 
	int sum = q1+q2+r2;
	int rev = q1*100 + q2*10 + r2;
	printf("rev of three digit num is %d \n" , rev);
	printf("sum of given num is %d",sum);
	
}
